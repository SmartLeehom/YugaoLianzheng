<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yugao.lianzheng.modules.sys.dao.LianzhengDongtaiImgDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yugao.lianzheng.modules.sys.entity.LianzhengDongtaiImgEntity">
        <id column="liangzheng_dongtai_img_id" property="liangzhengDongtaiImgId" />
        <result column="liangzheng_dongtai_id" property="liangzhengDongtaiId" />
        <result column="path" property="path" />
        <result column="name" property="name" />
        <result column="size" property="size" />
        <result column="suffix" property="suffix" />
        <result column="created_by" property="createdBy" />
        <result column="created_at" property="createdAt" />
        <result column="updated_by" property="updatedBy" />
        <result column="updated_at" property="updatedAt" />
        <result column="status" property="status" />
        <result column="remarks" property="remarks" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        liangzheng_dongtai_img_id AS "liangzhengDongtaiImgId", liangzheng_dongtai_id AS "liangzhengDongtaiId", path AS "path", name AS "name", size AS "size", suffix AS "suffix",
        created_by AS "createdBy", created_at AS "createdAt", updated_by AS "updatedBy", updated_at AS "updatedAt", status AS "status", remarks AS "remarks"
    </sql>

    <!-- 查询廉政动态图片 -->
    <select id="getLianzhengDongtaiByMainId" resultType="com.beyondsoft.yugao.modules.sys.entity.LianzhengDongtaiImgEntity">
        select
        <include refid="Base_Column_List"></include>
        from liangzheng_dongtai_img
        where liangzheng_dongtai_id=#{mainId} and status=1
        order by created_at desc
    </select>

    <!-- 删除廉政动态图片 -->
    <update id="deleteLianzhengDongtaiImg" >
        update liangzheng_dongtai_img set status=-1 where liangzheng_dongtai_img_id=#{id}
    </update>

    <!-- 删除廉政动态图片 -->
    <update id="clearLianzhengDongtaiImgsByMainId" >
        update liangzheng_dongtai_img set status=-1 where liangzheng_dongtai_id=#{mainId}
    </update>
</mapper>
